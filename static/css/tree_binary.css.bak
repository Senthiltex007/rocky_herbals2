k.tree ul {
  padding-top: 16px;
  position: relative;
  display: flex;
  justify-content: center;
  gap: 24px;
}

.tree li {
  list-style-type: none;
  text-align: center;
  position: relative;
  padding: 12px 6px 0 6px;
}

.tree li::before, .tree li::after {
  content: '';
  position: absolute;
  top: 0;
  width: 50%;
  height: 16px;
  border-top: 2px solid #28a745;
}

.tree li::before { left: -50%; border-right: 2px solid #28a745; }
.tree li::after { right: -50%; border-left: 2px solid #28a745; }

.tree li:only-child::before,
.tree li:only-child::after { display: none; }

.member-box {
  display: inline-block;
  background: #007bff;
  color: white;
  padding: 6px 10px;
  border-radius: 6px;
  cursor: pointer;
  min-width: 140px;
  font-size: 12px;
  line-height: 1.4;
}

.member-box a.btn-outline-primary {
  border-color: #28a745;
  color: #28a745;
  font-size: 11px;
  padding: 2px 6px;
  margin-top: 4px;
}

.member-box a.btn-outline-primary:hover {
  background-color: #28a745;
  color: #fff;
}

#overlayBackground {
  display: none;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 1040;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
  cursor: pointer;
}

#overlayBackground.show {
  display: block;
  opacity: 1;
}

#memberDetailPanel {
  display: none;
  position: fixed;
  top: 20%; left: 50%;
  transform: translate(-50%, -20%);
  width: 400px;
  z-index: 1050;
  opacity: 0;
  transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
}

#memberDetailPanel.show {
  display: block;
  opacity: 1;
  transform: translate(-50%, 0);
}

